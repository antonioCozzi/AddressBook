<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/material_layout_keylines_screen_edge_margin"
        android:padding="@dimen/material_component_cards_padding_from_edge_of_screen_to_card"
        android:elevation="@dimen/cardview_default_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_Tv"
            android:text="@string/name"
            android:textSize="@dimen/material_component_lists_single_line_text_size"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surname_Tv"
            android:text="@string/surname"
            android:textSize="@dimen/material_component_lists_single_line_text_size"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/name_Tv"/>

    </RelativeLayout>

</LinearLayout>